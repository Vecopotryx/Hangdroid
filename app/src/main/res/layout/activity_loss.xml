<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackground"
    tools:context=".LossActivity">

    <ImageView
        android:id="@+id/lossImageView"
        android:layout_width="178dp"
        android:layout_height="107dp"
        android:layout_marginTop="112dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/android_robot" />

    <TextView
        android:id="@+id/lossTextView"
        style="@android:style/TextAppearance.DeviceDefault.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game over"
        android:textColor="@color/mainText"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lossImageView" />

    <TextView
        android:id="@+id/lossYouLostTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You lost"
        android:textColor="@color/mainTextAlt"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lossTextView" />

    <TextView
        android:id="@+id/lossAnswerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="The answer was: (insert)"
        android:textColor="@color/mainTextAlt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lossYouLostTextView" />

    <TextView
        android:id="@+id/lossGuessView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Your guess was: (insert)"
        android:textColor="@color/mainTextAlt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lossYouLostTextView" />

    <TextView
        android:id="@+id/lossGuessAmountView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Amount of guesses: (insert)"
        android:textColor="@color/mainTextAlt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lossAnswerView" />

    <TextView
        android:id="@+id/lossCharGuessView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="[t,e,s,t ]"
        android:textColor="@color/mainTextAlt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lossIncorrectGuessesView" />

    <Button
        android:id="@+id/lossPlayAgainButton"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button"
        android:text="Play again"
        android:textAllCaps="false"
        android:textColor="@color/mainButtonText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lossCharGuessView"
        app:layout_constraintVertical_bias="0.136" />

    <Button
        android:id="@+id/lossExitButton"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button"
        android:text="Exit"
        android:textAllCaps="false"
        android:textColor="@color/mainButtonText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lossPlayAgainButton"
        app:layout_constraintVertical_bias="0.118" />

    <TextView
        android:id="@+id/lossIncorrectGuessesView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Amount of incorrect guesses: (insert)"
        android:textColor="@color/mainTextAlt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lossGuessAmountView" />

</androidx.constraintlayout.widget.ConstraintLayout>